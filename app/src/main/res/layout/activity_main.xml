<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
    android:background="@drawable/background">

<ImageView
    android:id="@+id/logo"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="36dp"
    android:src="@drawable/logo" />

    <TextView
        android:id="@+id/logoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Welcome to Medical Clinic"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/doctorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="doctorButtonOnClick"
        android:text="Doctor" />

    <Button
        android:id="@+id/patientButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorButton"
        android:layout_centerHorizontal="true"
        android:onClick="patientButtonOnClick"
        android:text="Patient" />


</RelativeLayout>